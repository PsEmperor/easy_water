                <TextView
                    android:id="@+id/tv_td"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="11dp"
                    android:layout_weight="2"
                    android:background="@drawable/bg_circular_square_edittext_selector"
                    android:drawableRight="@drawable/icon_arrow"
                    android:gravity="center"
                    android:onClick="true"
                    android:text="\t\t\t\t0" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/ll_1_td"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="通道1" />
                
                
                <TextView
                    android:id="@+id/tv_pre1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="-"
                    android:gravity="end" />

                <EditText
                    android:id="@+id/et_channel1"
                    android:inputType="numberSigned"
                    android:background="@drawable/bg_circular_square_edittext_selector"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    />

                
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_1_mj"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="面积(亩)" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />

                <EditText
                    android:id="@+id/et_area1"
                    android:inputType="numberSigned"
                    android:background="@color/gray_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                     />
            </LinearLayout>
            
