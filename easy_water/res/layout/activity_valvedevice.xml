                    android:text="上级设备" />

                <EditText
                    android:id="@+id/et_sb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_sd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
