            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView_test_start"
            android:layout_alignBottom="@+id/textView_test_start"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:gravity="center_vertical"
            android:text="00：00"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView_test_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextViewX"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/TextViewX"
            android:text="开始时间"
            android:textColor="@color/black" />
