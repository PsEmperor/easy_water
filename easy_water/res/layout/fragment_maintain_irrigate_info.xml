        android:layout_below="@+id/rv_maintain_irrigat_info_address" >

        <TextView
            android:id="@+id/text_maintain_irrigat_info_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
