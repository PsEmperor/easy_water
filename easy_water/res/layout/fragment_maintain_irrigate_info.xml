        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:text="反过滤冲洗器时间"
			android:layout_centerVertical="true"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_maintain_basic_info_filter_examine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:text="0"
            android:textColor="@color/black" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_maintain_basic_info_max_orroagte_restnight_examine"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/layout_maintain_basic_info_max_orroagte_filter_examine" >

        <TextView
            android:id="@+id/TextViewX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="夜间休息时间"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView_test_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_test_start"
            android:layout_below="@+id/TextViewX"
            android:layout_marginTop="2dp"
            android:text="结束时间"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/text_maintain_basic_info_max_orroagte_restnight_end_examine"
            android:layout_width="wrap_content"
